{
    "name": "Rival",
    "version": "1.0.0",
    "manifest_version": 2,
    "description": "Rival",
    "icons": {
        "512": "logo512.png"
    },
    "browser_action": {
        "default_icon": "logo512.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.amazon.com/*"
            ],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts":["background.js"]
    },
    "permissions": ["activeTab","storage"]
}
